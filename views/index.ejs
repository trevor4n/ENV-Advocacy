  <body>
    <%- include('partials/nav') %> 
    <%- include('partials/sidenav') %> 
    <main>
      <div id="d3">
        <div id="snippet"> 
          <div class="row ">
            <div class="col s12 m6">
              <div class="card">
                <div class="card-image">
                  <img src="/public/images/200905_Lightroom_IMG_20200605_205647.jpg">
