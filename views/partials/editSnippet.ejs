<%- include('header') %> 
  <body>
    <%- include('nav') %> 
    <%- include('sidenav') %> 
    <main>
      <div class="newSnip">
        <h2 class="almostManhattan">Modify snippet: <%= snip.id %> </h2>
          <div class="row">
            <form class="col s12" action="/snippet/<%= snip.id %>/?_method=put" method="POST">
              <div class="form-group">
                <div class="row">
                  <div class="input-field col s6">
                      <textarea id="dataTextArea2" name="data" type="text" class="materialize-text-area"><%= snip.data %></textarea>
                      <label class="active" for="dataTextArea2">Snippet</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                  <input disabled value="Insert tags separated by commas" id="tags" name="tags" type="text" class="validate">
                  <label for="disabled">Tags ðŸš§ Under Construction ðŸš§</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <input value="<%= snip.src %>" id="src" name="src" type="text">
                    <label for="src">Source</label>
                  </div>
                </div>
              </div>
              <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
              </button>
              <a href="/snippet/" class="waves-effect waves-light btn red"><i class="material-icons right">cancel</i>Cancel</a>
            </form> 
          </div>
      </div>
    </main>
    <%- include('footer') %> 
    <!-- Compiled and minified JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/public/script.js"></script>
  </body>
</html> 